{
  "name": "se-2",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "packages/hardhat",
    "packages/nextjs"
  ],
  "scripts": {
    "account": "cd packages/hardhat && npm run account",
    "chain": "cd packages/hardhat && npm run chain",
    "fork": "cd packages/hardhat && npm run fork",
    "deploy": "cd packages/hardhat && npm run deploy",
    "verify": "cd packages/hardhat && npm run verify",
    "hardhat-verify": "cd packages/hardhat && npm run hardhat-verify",
    "compile": "cd packages/hardhat && npm run compile",
    "generate": "cd packages/hardhat && npm run generate",
    "flatten": "cd packages/hardhat && npm run flatten",
    "hardhat:lint": "cd packages/hardhat && npm run lint",
    "hardhat:lint-staged": "cd packages/hardhat && npm run lint-staged",
    "hardhat:format": "cd packages/hardhat && npm run format",
    "hardhat:test": "cd packages/hardhat && npm run test",
    "test": "npm run hardhat:test",
    "format": "npm run next:format && npm run hardhat:format",
    "start": "cd packages/nextjs && npm run dev",
    "next:lint": "cd packages/nextjs && npm run lint",
    "next:format": "cd packages/nextjs && npm run format",
    "next:check-types": "cd packages/nextjs && npm run check-types",
    "next:build": "cd packages/nextjs && npm run build",
    "next:serve": "cd packages/nextjs && npm run serve",
    "postinstall": "husky install",
    "precommit": "lint-staged",
    "vercel": "cd packages/nextjs && npm run vercel",
    "vercel:yolo": "cd packages/nextjs && npm run vercel:yolo"
  },
  "devDependencies": {
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
